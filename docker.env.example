# Docker Compose Environment Variables
# Copy this file to docker.env and customize as needed
# docker.env is git-ignored and will not be committed

# Backend port mapping (host:container)
# Format: "HOST_PORT:5000" where 5000 is the container's internal port
# Default: 5000 (if not set, docker-compose will use 5000)
BACKEND_PORT=5000

# Frontend port mapping (host:container)
# For development: "HOST_PORT:3000" where 3000 is the container's internal port
# For production: "HOST_PORT:80" where 80 is the container's internal port
# Default: 3000 for dev, 80 for prod (if not set, docker-compose will use defaults)
FRONTEND_PORT=3000
FRONTEND_PORT_PROD=80
